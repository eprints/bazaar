<?xml version="1.0" encoding="utf-8"?>

<!--

Action buttons (Previous/Save/Next) can be shown "top", "bottom" or "both":
<stage name="type" action_buttons="both">
  <component><field ref="type" required="yes" /></component>
</stage>

-->

<workflow xmlns="http://eprints.org/ep3/workflow" xmlns:epc="http://eprints.org/ep3/control">

  <flow>
		<stage ref="details"/>
  </flow>

  <stage name="details">
  	<component id="creators"><field ref="creators" /></component>
  	<component id="title"><field ref="title" /></component>
  	<component id="description"><field ref="description" /></component>
  	<component id="version"><field ref="version" required="yes" /></component>
  	<component id="controller"><field ref="controller" /></component>
  	<component id="requirements"><field ref="requirements" /></component>
  	<component id="home_page"><field ref="home_page" /></component>
  	<component id="install" type="FileSelector" path="{$config{base_path}}/lib" document="install"></component>
  </stage>

</workflow>
